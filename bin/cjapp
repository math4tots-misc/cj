#!/bin/sh

# Runs a cj app

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
export CJ_HOME="${DIR}/.."
TARGET="${CJ_HOME}/target"

# run a CJ app (see list in src/main/app)
java -cp $TARGET/classes crossj.cj.main.JSMain -a "$@" -o $TARGET/out && (cd $TARGET/out && if test -f package.json; then
    nwjs .
else
    open index.html
fi )
